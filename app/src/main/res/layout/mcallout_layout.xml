<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    
    xmlns:app="http://schemas.android.com/apk/res-auto">
<View
    android:id="@+id/name_view"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@drawable/rrounded_view"
    />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/parking_name_txt"
        android:layout_height="25dp"
        android:text="   Area Parking sector 3 area"
        android:textColor="@color/white"
        android:gravity="fill_vertical"
        android:textAlignment="gravity"
        android:textSize="14sp"/>
    <View
        android:id="@+id/red_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Red"
       android:layout_below="@id/name_view"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/name_layout"
    android:layout_height="22dp"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_below="@id/red_line_view">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/name_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_height="15dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Name"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <TextView
        android:id="@+id/parking_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_height="16dp"
        android:gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:text="sector 3"/>
</RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/total_layout"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
     android:layout_below="@id/name_layout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/name_icon"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_height="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Total"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/total_txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_height="16dp"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:text="200"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/reservedcount_layout"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
       android:layout_below="@id/total_layout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/name_icon"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_height="16dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Reserved count"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/reservedcount_txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:layout_height="16dp"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:text="200"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/avilable_layout"
        android:layout_height="22dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
      android:layout_below="@id/reservedcount_layout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/name_icon"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_height="25dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Available count"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/available_count_txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:layout_height="16dp"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:text="sector 3"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/available_percentage_layout"
        android:layout_height="22dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/avilable_layout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/name_icon"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_height="17dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="Available percentage"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/avilable_perc_txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:layout_height="15dp"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:text="19%"/>
        </RelativeLayout>
</LinearLayout>
    <Button
        android:id="@+id/reserve_parking_btn"
        android:layout_width="match_parent"
        android:layout_below="@id/available_percentage_layout"
        android:layout_height="30dp"
        android:text="Reserve Parking"
        android:layout_marginStart="60dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_popup"
        android:layout_marginEnd="60dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/add_to_favourite_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/reserve_parking_btn"
        android:text="Add to favorite"
        android:layout_marginStart="60dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_popup"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/reserve_advance_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
android:layout_below="@id/add_to_favourite_btn"
        android:text="Reserve on Advance"
        android:layout_marginStart="60dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_popup"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/reserve_advance_btn"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reserve_advance_btn"/>


</RelativeLayout>